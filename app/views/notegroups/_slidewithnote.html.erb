<div id="box<%=slidewithnote.id%>" class="box boxright" style="left:150%">
  <div class="colslide "style="float:left;">
    <%= image_tag slidewithnote.image.url, :width => "100%"%>
  </div>
  <div class="colnote">
    <div id="notegroup<%=notegroup.id%>note<%=slidewithnote.id%>" style="float:right; width:100%; height:100%">
      <iframe class="etherpadnote" id="etherpadnote<%=notegroup.id%>-<%=slidewithnote.id%>" src="http://beta.etherpad.org/p/LectureTogether<%=notegroup.id%><%=slidewithnote.id%>?showControls=true&amp;showChat=true&amp;showLineNumbers=false&amp;useMonospaceFont=false&amp;userName=<%=current_user.first_name%>&amp;noColors=false&amp;hideQRCode=false" style="border: 0; width: 100%; height: 100%;"></iframe> 
    </div>
  </div>
</div>
